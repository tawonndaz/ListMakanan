<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <ImageView
        android:id="@+id/imageViewFotoMakanan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNamaMakanan"
        android:layout_width="213dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="Nama Makanan"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewFotoMakanan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2Harga"
        android:layout_width="205dp"
        android:layout_height="31dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Harga"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewFotoMakanan"
        app:layout_constraintTop_toBottomOf="@+id/textViewNamaMakanan" />

</androidx.constraintlayout.widget.ConstraintLayout>